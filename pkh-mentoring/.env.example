# Database — PostgreSQL connection string
# For Docker: postgresql://pkh_user:pkh_dev_password@localhost:5433/mentoring_db?schema=public
# For local PG: postgresql://pkh_user:pkh_dev_password@localhost:5432/mentoring_db?schema=public
DATABASE_URL="postgresql://pkh_user:pkh_dev_password@localhost:5433/mentoring_db?schema=public"

# Public URL of the app (used in magic link emails)
NEXT_PUBLIC_APP_URL="http://localhost:3099"

# Port the app runs on
PORT=3099

# Admin password for the admin dashboard login
ADMIN_PASSWORD=changeme

# Session secret for admin cookie signing (change this in production!)
SESSION_SECRET=change-me-to-a-random-string

# Resend API key for sending emails (magic links, notifications)
RESEND_API_KEY=

# Slack incoming webhook URL for notifications
SLACK_WEBHOOK_URL=

# Session secret for signing admin session cookies (change in production)
SESSION_SECRET=pkh-dev-session-secret-change-in-prod

# Timezone — must be Europe/London for correct fortnightly calculations
TZ=Europe/London
